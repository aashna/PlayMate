<?xml version="1.0" encoding="utf-8"?>
    
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/rel"
    android:orientation="horizontal"
    >

    <View
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/backgd"
        android:id="@+id/view"
        android:layout_alignTop="@+id/actual_content"
        android:layout_alignBottom="@id/actual_content"
        android:layout_alignLeft="@id/actual_content"
        android:layout_alignRight="@id/actual_content"
        />
    
    <RelativeLayout android:id="@+id/actual_content"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"  >

    <!-- ListRow Left side Thumbnail image -->

    <LinearLayout
        android:id="@+id/thumbnail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="5dip"
        android:background="@drawable/image_bg"
        android:padding="3dip" >

        <ImageView
            android:id="@+id/list_image"
            android:layout_width="60dip"
            android:layout_height="60dip"
            android:src="@drawable/zoozoo" />
    </LinearLayout>

    <!-- User's Name -->

    <TextView
        android:id="@+id/user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/thumbnail"
        android:layout_toRightOf="@+id/thumbnail"
        android:text="Aashna"
        android:textColor="#040404"
        android:textSize="15dip"
        android:textStyle="bold"
        android:typeface="sans" />

    <!-- Post -->

    <TextView
        android:id="@+id/post"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_name"
        android:layout_marginTop="7dip"
        android:layout_toRightOf="@+id/thumbnail"
        android:text="Hi there! :) This is my post. "
        android:textColor="#343434"
        android:textSize="15dip"
        android:textStyle="italic" />

    <!-- Phone Number -->

    <TextView
        android:id="@+id/dist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/user_name"
        android:layout_marginRight="20dip"
        android:gravity="right"
        android:text=" 5.93"
        android:textColor="#10bcc9"
        android:textSize="10dip"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/km"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/user_name"
        android:gravity="right"
        android:text="km"
        android:textColor="#10bcc9"
        android:textSize="10dip"
        android:textStyle="bold" />

    <!-- Rightend Arrow -->
    


    <ImageButton
        android:id="@+id/smiley"
        android:layout_width="25dp"
        android:layout_height="25dp"
       android:layout_toLeftOf="@+id/comment"
        android:layout_alignParentBottom="true"
        android:src="@drawable/smiley" />

    <ImageButton
        android:id="@+id/comment"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignRight="@+id/km"
        android:layout_marginLeft="5dp"
        android:src="@drawable/comment" 
        android:layout_alignParentBottom="true"/>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:layout_below="@+id/comment">

        <EditText
            android:id="@+id/editText_comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:textSize="7dp"
            android:text="Enter your comment" 
            android:visibility="invisible"/>"

        <ImageButton
            android:id="@+id/enter_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/arrow"
             android:visibility="invisible" />

    </LinearLayout>

    <ImageView
        android:id="@+id/posted_img"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:layout_below="@id/post"
        android:visibility="gone"
        />

    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/post"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:gravity="right"
        android:text="dd/mm/yyyy-hh:mm:ss"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#10bcc9"
        android:textSize="10dip"
        android:textStyle="italic" />
</RelativeLayout>
</RelativeLayout>